@{
    ViewBag.Title = "Home";
}

@model WebApp.Models.UserQuery

@using (Html.BeginForm("Query","Home"))
{
    @Html.Label("Search:")
    @Html.TextBoxFor(m=>m.InputQuery,new{ @placeholder = "Enter search query", @class = "form-control roundbox20" })
    <br />
    <input type="submit" id="search" value="Go!" class="btn btn-primary btn-sm" />

    Html.EndForm();
}


